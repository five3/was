{
	//必须字段
	"name": "DDAP@DANGDANG",
	"version": "0.9",
	"manifest_version": 2,
	//描述字段
	"description": "Chrome Plug For DDAP。",	
	"icons": {
		"128": "logo.png",
		"16": "icon16.png"
	},
	"web_accessible_resources": [
					"initial.gif",
					"operate.gif",
					"operate_1.gif"
				    ],
	//"default_locale": "en",
	//应用类型，多选一，或者不选：  "browser_action": {...},"page_action": {...},"theme": {...}, "app": {...},
	"browser_action": {
		//"default_popup": "popup.html",  //该选项使用后，background脚本中注册的onclick事件将失效
		"default_icon": "icon16.png",
		"default_title": "启用对象库插件"		
	},
	////*****************************************
	//// 以下所有都是根据需要提供 
	////*****************************************
	//插件可以操作的权限
	"permissions": [
		"tabs",
		"notifications",
		"http://*/*",
		"https://*/*"
	],	
	//后台逻辑及事件处理程序，初次加载插件时会被加载
	"background": { 
		"scripts": [ "jquery-1.8.0.min.js", "background.js","json2.js"], 
		"matches": [ "http://*/*", "https://*/*" ],
		"css": [ "plug_style.css" ]
	},
	//宿主页面要注入资源
	"content_scripts": [ {
      "js": [ "jquery-1.8.0.min.js", "content_script.js","json2.js"],
      "matches": [ "http://*/*", "https://*/*" ],
	  "css": [ "content_style.css" ],
      "run_at": "document_idle"
    }]	
